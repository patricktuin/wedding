<h1>Editing Invitee</h1>
 
<%= form_for :invitee, url: invitee_path(@invitee), method: :patch do |f| %>

  <p>
    <%= f.label :id %><br>
    <%= f.text_field :id %>
  </p>
 
  <p>
    <%= f.label :name %><br>
    <%= f.text_area :name %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<h2>Voeg een gast toe</h2>
<%= form_for([@invitee, @invitee.guests.build]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :attend %><br>
    <%= f.text_area :attend %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

 
<%= link_to 'Back', invitees_path %>